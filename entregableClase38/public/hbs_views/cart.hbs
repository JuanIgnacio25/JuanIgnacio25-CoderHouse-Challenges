<h1>Products</h1>
<div>
    {{#if products}}
    <table>
        <thead>
            <th>Name</th>
            <th>Price</th>
            <th>Code</th>
            <th>Description</th>
            <th>TimeStapm</th>
            <th>Thumbnail</th>
            <th> </th>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td>{{this.code}}</td>
                <td>{{this.description}}</td>
                <td>{{this.timestamp}}</td>
                <td><img style="width: 50px; height:50px" src={{this.thumbnail}}></td>
                <td>
                    <form action="/api/products/buy" method="POST">
                        <input type="submit" value="Buy">
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h2>No hay productos</h2>
    {{/if}}
</div>